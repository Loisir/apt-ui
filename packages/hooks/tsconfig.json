{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "CommonJS",
    "target": "es5",
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "removeComments": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": false,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}